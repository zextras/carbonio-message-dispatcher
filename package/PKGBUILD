build:apt() {
  cd ${srcdir}
  #Installing erlang
  curl https://packages.erlang-solutions.com/erlang/debian/pool/esl-erlang_24.0-1~ubuntu~focal_amd64.deb > erlang.deb
  apt update && apt install --no-install-recommends -y ./erlang.deb
  #Building MongooseIm, check build steps from the official repo, especially from scripts in tools/pkg
  cd MongooseIM-5.1.0
  git apply ../delete_room.patch
  #The following patch should be removed when https://github.com/esl/MongooseIM/pull/3693 is merged
  git apply ../multiple_owners_and_affiliation_api.patch
  ./tools/configure with-pgsql system=yes prefix=""
  #Trick to let executables have no prefix but still allowing them to install to a specific directory
  sed -i 's#PREFIX=""#PREFIX="${pkgdir}"#' configure.out
  make rel
}

build:yum() {
  cd ${srcdir}
  #Installing erlang
  curl https://packages.erlang-solutions.com/erlang/rpm/centos/8/x86_64/esl-erlang_24.0-1~centos~8_amd64.rpm > erlang.rpm
  yum install -y ./erlang.rpm
  #Building MongooseIm, check build steps from the official repo, especially from scripts in tools/pkg
  cd MongooseIM-5.1.0
  git apply ../delete_room.patch
  #The following patch should be removed when https://github.com/esl/MongooseIM/pull/3693 is merged
  git apply ../multiple_owners_and_affiliation_api.patch
  ./tools/configure with-pgsql system=yes prefix=""
  #Trick to let executables have no prefix but still allowing them to install to a specific directory
  sed -i 's#PREFIX=""#PREFIX="${pkgdir}"#' configure.out
  make rel
}

package() {
  cd "${srcdir}/MongooseIM-5.1.0"
  make install
  cd "${srcdir}"/../../mongooseim
  install -Dm 644 ./carbonio-chats-messaging-auth/target/carbonio-chats-messaging-auth-fatjar.jar \
    "${pkgdir}/usr/bin/carbonio/carbonio-chats-messaging/carbonio-chats-messaging-auth.jar"

  cd "${srcdir}"
  #Overwriting mongoose files with ours
  install -Dm 644 mongooseim.toml "${pkgdir}/etc/mongooseim/mongooseim.toml"
  install -Dm 644 app.config "${pkgdir}/etc/mongooseim/app.config"

  #Our files
  install -Dm 755 carbonio-chats-messaging "${pkgdir}/usr/bin/carbonio-chats-messaging"
  install -Dm 644 carbonio-chats-messaging.service "${pkgdir}/lib/systemd/system/carbonio-chats-messaging.service"
  install -Dm 644 carbonio-chats-messaging-http-sidecar.service "${pkgdir}/lib/systemd/system/carbonio-chats-messaging-http-sidecar.service"
  install -Dm 644 carbonio-chats-messaging-xmpp-sidecar.service "${pkgdir}/lib/systemd/system/carbonio-chats-messaging-xmpp-sidecar.service"
  install -Dm 644 carbonio-chats-messaging-http.hcl "${pkgdir}/etc/zextras/service-discover/carbonio-chats-messaging-http.hcl"
  install -Dm 644 carbonio-chats-messaging-xmpp.hcl "${pkgdir}/etc/zextras/service-discover/carbonio-chats-messaging-xmpp.hcl"
  install -Dm 644 carbonio-chats-messaging-setup.sh "${pkgdir}/etc/zextras/pending-setups.d/carbonio-chats-messaging.sh"
  install -Dm 644 intentions-http.json "${pkgdir}/etc/carbonio/chats-messaging/service-discover/intentions-http.json"
  install -Dm 644 intentions-xmpp.json "${pkgdir}/etc/carbonio/chats-messaging/service-discover/intentions-xmpp.json"
  install -Dm 644 policies.json "${pkgdir}/etc/carbonio/chats-messaging/service-discover/policies.json"
  install -Dm 644 service-protocol-http.json "${pkgdir}/etc/carbonio/chats-messaging/service-discover/service-protocol-http.json"
  install -Dm 644 service-protocol-xmpp.json "${pkgdir}/etc/carbonio/chats-messaging/service-discover/service-protocol-xmpp.json"
  install -Dm 644 carbonio-chats-messaging-auth.service "${pkgdir}/lib/systemd/system/carbonio-chats-messaging-auth.service"
}

postinst() {
  getent group 'carbonio-chats-messaging' >/dev/null ||
    groupadd -r 'carbonio-chats-messaging'
  getent passwd 'carbonio-chats-messaging' >/dev/null ||
    useradd -r -M -g 'carbonio-chats-messaging' -d /var/lib/mongooseim -s /sbin/nologin 'carbonio-chats-messaging'

  chown carbonio-chats-messaging:carbonio-chats-messaging /var/log/mongooseim
  chown carbonio-chats-messaging:carbonio-chats-messaging /var/lib/mongooseim
  chown carbonio-chats-messaging:carbonio-chats-messaging /var/lock/mongooseim
  chown carbonio-chats-messaging:carbonio-chats-messaging /usr/lib/mongooseim

  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
    systemctl enable carbonio-chats-messaging.service >/dev/null 2>&1 || :
    systemctl enable carbonio-chats-messaging-http-sidecar.service >/dev/null 2>&1 || :
    systemctl enable carbonio-chats-messaging-xmpp-sidecar.service >/dev/null 2>&1 || :
  fi

  echo "======================================================"
  echo "Carbonio chats messaging installed successfully!"
  echo "You must run pending-setups to configure it correctly."
  echo "======================================================"
}

prerm() {
  if [ -d /run/systemd/system ]; then
    systemctl --no-reload disable carbonio-chats-messaging.service >/dev/null 2>&1 || :
    systemctl --no-reload disable carbonio-chats-messaging-http-sidecar.service >/dev/null 2>&1 || :
    systemctl --no-reload disable carbonio-chats-messaging-xmpp-sidecar.service >/dev/null 2>&1 || :
    systemctl stop carbonio-chats-messaging.service >/dev/null 2>&1 || :
    systemctl stop carbonio-chats-messaging-http-sidecar.service >/dev/null 2>&1 || :
    systemctl stop carbonio-chats-messaging-xmpp-sidecar.service >/dev/null 2>&1 || :
  fi
}

postrm() {
  rm -f /etc/carbonio/chats-messaging/service-discover/token
  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
  fi
}